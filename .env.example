# ============================================
# CONFIGURACIÓN DE EJEMPLO - ChatBot Backend
# ============================================
# Copia este archivo a .env y modifica los valores según tu entorno

# Flask Application
FLASK_HOST=0.0.0.0
FLASK_PORT=5000
FLASK_DEBUG=True

# Secret Key (CAMBIAR EN PRODUCCIÓN - usar secrets.token_hex(32))
SECRET_KEY=dev-secret-key-cambiar-en-produccion-usar-algo-seguro

# Database (Unificada - usada por API, Socket Server y Worker)
DATABASE_URL=sqlite:///instance/appointments.db
# Para PostgreSQL en producción:
# DATABASE_URL=postgresql://user:password@localhost:5432/chatbot_db
# Para Docker Compose:
# DATABASE_URL=postgresql://chatuser:chatpass@db:5432/chatbot

# Socket Server
SOCKET_HOST=0.0.0.0
SOCKET_PORT=5001

# Worker
WORKER_SLEEP_TIME=0.1

# API Authentication
# Token para proteger endpoints de escritura (reservar, cancelar)
# Generar token seguro: python -c "import secrets; print(secrets.token_urlsafe(32))"
API_TOKEN=dev-token-123

# Logging
LOG_LEVEL=INFO
# Opciones: DEBUG, INFO, WARNING, ERROR, CRITICAL

# ============================================
# NOTAS IMPORTANTES
# ============================================
# - En desarrollo: SQLite es suficiente
# - En producción: Usar PostgreSQL y tokens seguros
# - NO commita el archivo .env al repositorio
# - La persistencia ahora es UNIFICADA en SQLAlchemy
# - Todos los componentes comparten la misma base de datos
