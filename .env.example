# ============================================
# CONFIGURACIÓN DE EJEMPLO - ChatBot Backend
# ============================================
# Copia este archivo a .env y modifica los valores según tu entorno

# Flask Application
FLASK_HOST=0.0.0.0
FLASK_PORT=5000
FLASK_DEBUG=True

# Secret Key (CAMBIAR EN PRODUCCIÓN - usar secrets.token_hex(32))
SECRET_KEY=dev-secret-key-cambiar-en-produccion-usar-algo-seguro

# Database
DATABASE_URL=sqlite:///instance/appointments.db
# Para PostgreSQL en producción:
# DATABASE_URL=postgresql://user:password@localhost:5432/chatbot_db

# Socket Server
SOCKET_HOST=0.0.0.0
SOCKET_PORT=5001

# Worker
WORKER_SLEEP_TIME=0.1
WORKER_MAX_DAYS=7

# Appointment Manager
APPOINTMENT_STORAGE_PATH=instance/appointments.json
SLOT_GENERATION_DAYS=7

# Business Hours (JSON string)
BUSINESS_HOURS=["10:00", "11:00", "12:00", "14:00", "15:00", "16:00"]

# Logging
LOG_LEVEL=INFO
# Opciones: DEBUG, INFO, WARNING, ERROR, CRITICAL
